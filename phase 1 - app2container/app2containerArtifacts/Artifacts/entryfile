#!/bin/bash
java '-D[Standalone]' '-server' '-Xms64m' '-Xmx512m' '-XX:MetaspaceSize=96M' '-XX:MaxMetaspaceSize=256m' '-Djava.net.preferIPv4Stack=true' '-Djboss.modules.system.pkgs=org.jboss.byteman' '-Djava.awt.headless=true' '-Dorg.jboss.boot.log.file=/opt/wildfly/standalone/log/server.log' '-Dlogging.configuration=file:/opt/wildfly/standalone/configuration/logging.properties' '-jar' '/opt/wildfly/jboss-modules.jar' '-mp' '/opt/wildfly/modules' 'org.jboss.as.standalone' '-Djboss.home.dir=/opt/wildfly' '-Djboss.server.base.dir=/opt/wildfly/standalone' '-c' 'standalone.xml' '-b' '0.0.0.0'